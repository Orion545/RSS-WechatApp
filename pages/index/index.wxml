  <view class="choose">
    <button type="primary" size="default" loading="{{loading_det}}" bindtap="gotoHongHu" plain="{{plain_det}}">洪湖立交积水信息</button>
  </view>
  -->

  <view class="usermotto">
    <text class="user-motto">{{motto}}</text>
  </view>
</view>
